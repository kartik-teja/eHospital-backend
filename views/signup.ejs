<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Your Reports</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@4.0.0/dist/css/bootstrap.min.css"
        integrity="sha384-Gn5384xqQ1aoWXA+058RXPxPg6fy4IWvTNh0E263XmFcJlSAwiGgFAW/dAiS6JXm" crossorigin="anonymous">
    <style>
        .highlight {
            background-color: #f8f9fa;
        }

        .overlay.active {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background-color: rgba(0, 0, 0, 0.5);
            z-index: 0;
        }
    </style>
</head>

<body>
    <div id="overlay" class="overlay"></div>
    <div class="container">
        <div class="row py-5 position-relative">
            <div class="col-6 text-center" id="doctor-section">
                <div id="doctor-text" class="h-auto">Doctor Sign Up</div>
                <form id="doctor-form" class="w-75 p-3 border rounded bg-light mx-auto d-none" action="/signup/doctor"
                    method="post">
                    <h4>Doctor Sign Up</h4>
                    <div class="mb-3">
                        <label for="doctor-name" class="form-label">Full Name</label>
                        <input id="doctor-name" name="name" type="text" class="form-control" placeholder="Full Name">
                    </div>
                    <div class="mb-3">
                        <label for="doctor-username" class="form-label">Username</label>
                        <input id="doctor-username" name="username" type="text" class="form-control"
                            placeholder="Username">
                    </div>

                    <div class="mb-3">
                        <label for="doctor-email" class="form-label">Email</label>
                        <input id="doctor-email" type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="doctor-password" class="form-label">Password</label>
                        <input id="doctor-password" type="password" name="password" class="form-control"
                            placeholder="********">
                    </div>
                    <input type="hidden" value="doctor" name="role">
                    <button type="submit" class="btn btn-primary">Sign Up</button>
                </form>
            </div>
            <div class="col-6 text-center" id="patient-section">
                <div id="patient-text" class="h-auto">Patient Sign Up</div>
                <form id="patient-form" class="w-75 p-3 border rounded bg-light mx-auto d-none" action="/signup/patient"
                    method="post">
                    <h4>Patient Sign Up</h4>
                    <div class="mb-3">
                        <label for="patient-name" class="form-label">Full Name</label>
                        <input id="patient-name" name="name" type="text" class="form-control" placeholder="Full Name">
                    </div>
                    <div class="mb-3">
                        <label for="patient-username" class="form-label">Username</label>
                        <input id="patient-username" name="username" type="text" class="form-control"
                            placeholder="Username">
                    </div>
                    <div class="mb-3">
                        <label for="patient-email" class="form-label">Email</label>
                        <input id="patient-email" type="email" class="form-control" placeholder="Email">
                    </div>
                    <div class="mb-3">
                        <label for="patient-password" class="form-label">Password</label>
                        <input id="patient-password" name="password" type="password" class="form-control"
                            placeholder="********">
                    </div>
                    <input name="role" type="hidden" value="patient">
                    <button class="btn btn-secondary" type="submit">Sign Up</button>
                </form>
            </div>
        </div>
    </div>

    <script>
        document.addEventListener('DOMContentLoaded', () => {
            const sections = ['doctor', 'patient'];

            sections.forEach(section => {
                const sectionElement = document.getElementById(`${section}-section`);
                const form = document.getElementById(`${section}-form`);
                const text = document.getElementById(`${section}-text`);
                const overlay = document.getElementById('overlay');

                sectionElement.addEventListener('mouseenter', () => {
                    form.classList.remove('d-none');
                    text.classList.add('d-none');
                    sectionElement.classList.add('highlight');
                    overlay.classList.add('active');
                });

                sectionElement.addEventListener('mouseleave', () => {
                    form.classList.add('d-none');
                    text.classList.remove('d-none');
                    sectionElement.classList.remove('highlight');
                    overlay.classList.remove('active');
                });
            });
        });
    </script>
</body>

</html>